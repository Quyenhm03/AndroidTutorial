<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#D0DFFF"
    android:padding="@dimen/_12sdp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bebas_neue_regular"
            android:text="@string/unlock_feature_title"
            android:textAllCaps="true"
            android:textColor="#0E111B"
            android:textSize="@dimen/_43sdp"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgBackGround"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/_9sdp"
            android:background="@drawable/bg_unlock_feature"
            app:layout_constraintDimensionRatio="H,1:0.93"
            app:layout_constraintTop_toBottomOf="@id/txtTitle" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtSubTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_9sdp"
            android:gravity="center"
            android:text="@string/unlock_feature_subtitle"
            android:textColor="#0E111B"
            android:textSize="@dimen/_11sdp"
            app:fontFamily="@font/readex_pro_regular"
            app:layout_constraintTop_toBottomOf="@id/imgBackGround" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnTry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_12sdp"
            android:background="@drawable/bg_radius_12"
            android:backgroundTint="#0E111B"
            android:fontFamily="@font/readex_pro_bold"
            android:padding="@dimen/_12sdp"
            android:text="@string/btn_try"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/_14sdp"
            app:layout_constraintTop_toBottomOf="@id/txtSubTitle" />

        <ProgressBar
            android:id="@+id/progress"
            android:layout_width="@dimen/_18sdp"
            android:layout_height="@dimen/_18sdp"
            android:elevation="8dp"
            android:indeterminateTint="#66FFFFFF"
            app:layout_constraintBottom_toBottomOf="@id/btnTry"
            app:layout_constraintEnd_toEndOf="@id/btnTry"
            app:layout_constraintStart_toStartOf="@id/btnTry"
            app:layout_constraintTop_toTopOf="@id/btnTry" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_12sdp"
            android:gravity="center_horizontal"
            android:text="@string/policy2"
            android:textColor="#4D5A68"
            android:textSize="@dimen/_8sdp"
            app:layout_constraintTop_toBottomOf="@id/btnTry" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
