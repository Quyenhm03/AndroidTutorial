<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ROOM + CONTENT PROVIDER DEMO"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="═══ ROOM OPERATIONS ═══"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="16dp"/>

        <EditText
            android:id="@+id/edtName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tên người dùng"/>

        <EditText
            android:id="@+id/edtEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:inputType="textEmailAddress"/>

        <EditText
            android:id="@+id/edtStreet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Đường"/>

        <EditText
            android:id="@+id/edtCity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Thành phố"/>

        <EditText
            android:id="@+id/edtPostTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tiêu đề bài viết"/>

        <EditText
            android:id="@+id/edtPostContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nội dung bài viết"
            android:minLines="3"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnAdd"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Add (Room)"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnClear"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Clear All"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="═══ CONTENT PROVIDER OPERATIONS ═══"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="20dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnQueryProvider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Query via Content Provider"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnInsertProvider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Insert via Content Provider"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnBulkInsert"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bulk Insert via Provider"/>

        <TextView
            android:id="@+id/txtProviderResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Content Provider results..."
            android:padding="8dp"
            android:background="#E3F2FD"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/txtCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total users: 0"
            android:textStyle="bold"
            android:layout_marginTop="16dp"/>

        <TextView
            android:id="@+id/txtResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chưa có dữ liệu..."
            android:padding="8dp"
            android:background="#F5F5F5"
            android:layout_marginTop="8dp"/>

    </LinearLayout>
</ScrollView>