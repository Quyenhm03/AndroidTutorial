<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#F6F6F6"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".layout.ItineraryActivity">

    <FrameLayout
        android:id="@+id/itineraryLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imgItinerary"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="fitXY"
            android:src="@drawable/img_ha_noi"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/itinerary_title"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="24sp"
            android:layout_gravity="start|bottom"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="30dp"/>
    </FrameLayout>

    <LinearLayout
        android:id="@+id/introduceLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@id/itineraryLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="50dp"
                    app:cardMaxElevation="12dp"
                    app:cardPreventCornerOverlap="true">

                    <ImageView
                        android:id="@+id/imgProfile"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:contentDescription="image_profile"
                        android:src="@drawable/img_profile"
                        android:scaleType="centerCrop"/>
                </androidx.cardview.widget.CardView>

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingStart="10dp"
                    android:text="@string/author_name"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="20sp"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/create_date"
                    android:textColor="@color/normal_text"
                    android:textStyle="bold"
                    android:textSize="16sp"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/line_shape"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/share"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:stretchColumns="0,1,2"
                    android:layout_marginStart="15dp">

                    <TableRow
                        android:gravity="center">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_facebook"
                            android:layout_gravity="center"/>

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_instagram"
                            android:layout_gravity="center"/>

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_margin="4dp"
                            android:src="@drawable/ic_twitter"
                            android:layout_gravity="center"/>
                    </TableRow>

                    <TableRow
                        android:gravity="center">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:text="@string/facebook"
                            android:textSize="14sp"
                            android:gravity="center"
                            android:layout_marginTop="4dp"/>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:text="@string/instagram"
                            android:textSize="14sp"
                            android:gravity="center"
                            android:layout_marginTop="4dp"/>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:text="@string/twitter"
                            android:textSize="14sp"
                            android:gravity="center"
                            android:layout_marginTop="4dp"/>
                    </TableRow>
                </TableLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/line_shape"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/itinerary_description"
                android:textColor="@color/normal_text"
                android:textSize="16sp"/>
        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrDetail"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginVertical="15dp"
        app:layout_constraintTop_toBottomOf="@id/introduceLayout"
        app:layout_constraintBottom_toTopOf="@id/commentLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:background="@color/white">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnDetail1"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@drawable/ic_up"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/txtDay1"
                    app:layout_constraintBottom_toBottomOf="@id/txtDay1"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtDay1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/date1"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginStart="10dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@id/btnDetail1"/>

                <LinearLayout
                    android:id="@+id/dayLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="10dp"
                    android:layout_marginVertical="20dp"
                    app:layout_constraintTop_toBottomOf="@id/txtDay1"
                    android:visibility="gone">

                    <GridLayout
                        android:id="@+id/location1Layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:columnCount="3"
                        android:rowCount="2">

                        <ImageView
                            android:id="@+id/imgLocation1"
                            android:layout_width="24dp"
                            android:layout_height="30dp"
                            android:src="@drawable/ic_location"
                            android:layout_row="0"
                            android:layout_column="0"
                            android:layout_gravity="center_vertical"/>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_row="0"
                            android:layout_column="1"
                            android:layout_marginStart="10dp"
                            android:text="@string/location1_date1"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:layout_gravity="center_vertical"/>

                        <Space
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_row="0"
                            android:layout_column="2"
                            android:layout_columnWeight="1"/>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_row="1"
                            android:layout_column="0"
                            android:layout_columnSpan="2"
                            android:layout_columnWeight="1"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="10dp"
                            android:text="@string/location1_date1_des"
                            android:textColor="@color/normal_text"
                            android:textSize="16sp"/>

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_row="1"
                            android:layout_column="2"
                            app:cardCornerRadius="12dp"
                            app:cardMaxElevation="12dp"
                            app:cardPreventCornerOverlap="true">

                            <ImageView
                                android:layout_width="110dp"
                                android:layout_height="80dp"
                                android:src="@drawable/img_ho_hoan_kiem"
                                android:scaleType="centerCrop"/>
                        </androidx.cardview.widget.CardView>
                    </GridLayout>

                    <LinearLayout
                        android:id="@+id/location2Layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="20dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imgLocation2"
                                android:layout_width="24dp"
                                android:layout_height="30dp"
                                android:src="@drawable/ic_location"
                                android:layout_alignParentStart="true"/>

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:text="@string/location2_date1"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:layout_toRightOf="@id/imgLocation2"/>
                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/location2_date1_des"
                                android:textColor="@color/normal_text"
                                android:textSize="16sp"
                                android:layout_marginEnd="10dp"/>

                            <androidx.cardview.widget.CardView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:cardCornerRadius="12dp"
                                app:cardMaxElevation="12dp"
                                app:cardPreventCornerOverlap="true">

                                <ImageView
                                    android:layout_width="110dp"
                                    android:layout_height="80dp"
                                    android:src="@drawable/img_pho_co"
                                    android:scaleType="centerCrop"/>
                            </androidx.cardview.widget.CardView>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@color/white"
                android:padding="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnDetail2"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@drawable/ic_up"
                    app:layout_constraintBottom_toBottomOf="@id/txtDay2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/txtDay2" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txtDay2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="@string/date2"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@id/btnDetail2"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </ScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/commentLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:padding="20dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtComment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/comment"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/comment_nummber"
            android:textSize="18sp"
            android:layout_marginStart="7sp"
            app:layout_constraintTop_toTopOf="@+id/txtComment"
            app:layout_constraintBottom_toBottomOf="@+id/txtComment"
            app:layout_constraintStart_toEndOf="@id/txtComment"/>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/ic_right"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>